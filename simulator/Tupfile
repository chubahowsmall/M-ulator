include_rules

SUBS += cli/built-in.o
SUBS += cpu/built-in.o
SUBS += core/built-in.o

LDFLAGS += -lpython `python -c "import distutils.sysconfig; print distutils.sysconfig.get_config_var('LINKFORSHARED')"`
LDFLAGS += `if [[ \`uname -s\` == "linux" ]]; then echo -lrt; fi`

: foreach *.c |> !cc |> {objs}
: {objs} $(SUBS) |> !ld |> simulator
